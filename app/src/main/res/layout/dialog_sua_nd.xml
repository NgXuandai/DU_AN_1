<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tilte_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/menuDriver"
            android:gravity="center"
            android:padding="10dp"
            android:text="Thêm Khách Hàng"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_ten_ND_sua"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/search_background"
            android:hint="Tên Khách Hàng"
            android:paddingHorizontal="15dp" />

        <EditText
            android:id="@+id/ed_SDT_sua"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/search_background"
            android:hint="Số Điện Thoại"
            android:inputType="number"
            android:paddingHorizontal="15dp" />
        <EditText
            android:id="@+id/ed_MaDN_sua"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/search_background"
            android:hint="Mã Đăng Nhập"
            android:paddingHorizontal="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelSua"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/background_button_login"
                android:text="Cancel"
                android:textSize="18sp"
                app:backgroundTint="@null"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSaveSua"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/background_button_login"
                android:text="Save"
                android:textSize="18sp"
                app:backgroundTint="@null"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>